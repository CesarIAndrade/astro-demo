---
import logo from "../images/logo.png";
import { t } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
---

<header>
  <nav class="navbar navbar-expand-lg" style="background-color: #1c2331">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src={logo} alt="" /> SpecialFan</a>
      <button
        class="navbar-toggler bg-body-tertiary"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <LanguageSelector
              id="langSelector"
              class="py-2 px-4 font-semibold"
            />
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#us">{t("us.title")}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#fanSection">{t("navbar.items.one")}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#contact"
              >{t("contact.contactForm.title")}</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link,
  .navbar-brand {
    color: white;
    padding: 0.5rem;
    margin: 0.5rem;
  }

  .navbar-brand {
    margin-left: 10rem;
    align-items: center;
    font-size: 2rem;
    font-family: "Times New Roman", Times, serif;
  }

  .navbar-brand img {
    height: 4rem;
  }

  header {
    position: sticky;
    top: 0;
  }

  #navbarNav {
    justify-content: end;
  }

  #langSelector {
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .navbar-brand {
      margin-left: 0;
    }
  }

  @media (min-width: 992px) and (max-width: 1024px) {
    .navbar-brand {
      margin-left: 0;
    }
  }
</style>
