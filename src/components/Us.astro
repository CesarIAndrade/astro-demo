---
import { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";
---

<div class="us">
  <h2>{t("us.title")}</h2>
  <p>
    {t("us.description")}
  </p>
</div>

<style>
  .us {
    padding: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .us p {
    margin-top: 1rem;
    font-size: 1.25rem;
  }
</style>
